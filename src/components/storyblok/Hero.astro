---
import { storyblokEditable } from '@storyblok/astro'

const { blok } = Astro.props
---

<section {...storyblokEditable(blok)} class="py-10 md:py-16">
  <div class="container max-w-screen-xl mx-auto px-4">
    <div class="container max-w-screen-xl mx-auto px-4">
      <nav class="flex items-center justify-between mb-40">
        <img src="https://a-us.storyblok.com/f/1020548/61x41/dd1dd606f0/navbar-logo.png/m/" alt="" />

        <a href="/" class="px-7 py-3 md:px-9 md:py-4 bg-white font-medium md:font-semibold text-gray-700 text-md rounded-md hover:bg-gray-700 hover:text-white transition ease-linear duration-500">Download PDF</a>
      </nav>

      <div class="text-center">
        <div class="flex justify-center mb-16">
          <img src={`${blok.image.filename}/m/`} />
        </div>

        <h1 class="font-medium text-gray-600 text-lg md:text-2xl uppercase mb-8">{blok.name}</h1>

        <h2 class="font-normal text-gray-900 text-4xl md:text-7xl leading-none mb-8">{blok.title}</h2>

        <p class="font-normal text-gray-600 text-md md:text-xl mb-16">{blok.description}</p>

        <a href={blok.linkedIn.url} target="_blank" rel="noopener noreferrer" class="px-7 py-3 md:px-9 md:py-4 font-medium md:font-semibold bg-gray-700 text-gray-50 text-sm rounded-md hover:bg-gray-50 hover:text-gray-700 transition ease-linear duration-500">View LinkedIn</a>
      </div>
    </div>
  </div>
</section>
